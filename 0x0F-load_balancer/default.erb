server {
    listen 80 default_server;
    server_name _;
    root /var/www/html;

    location / {
        try_files $uri $uri/ =404;
        add_header X-Served-By <%= $server_hostname %>;
    }

    location = /404.html {
        root /var/www/html;
    }
}

