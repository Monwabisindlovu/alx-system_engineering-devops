#!/usr/bin/env bash
# Installs Nginx and configures it as a load balancer

# Update your package lists
sudo apt-get update

# Install Nginx
sudo apt-get install -y nginx

# Remove the default Nginx configuration file
sudo rm /etc/nginx/sites-enabled/default

# Create a new Nginx configuration file
sudo touch /etc/nginx/sites-enabled/load_balancer

# Write the configuration for the load balancer
echo "upstream backend {
    server 52.206.18.131;
    server 54.157.130.186;
}

server {
    listen 80;

    location / {
        proxy_pass http://backend;
    }
}" | sudo tee /etc/nginx/sites-enabled/load_balancer

# Test the Nginx configuration
sudo nginx -t

# Restart Nginx to apply the changes
sudo systemctl restart nginx

