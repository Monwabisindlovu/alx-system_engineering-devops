#!/usr/bin/env bash

# Create a backup of the original hosts file
sudo cp /etc/hosts /etc/hosts.bak

# Modify the /etc/hosts file using sed to change IP addresses
sudo sed -i 's/127.0.0.1/127.0.0.2/g' /etc/hosts
echo "8.8.8.8 facebook.com" | sudo tee -a /etc/hosts

# Clean up temporary files
rm ~/hosts.new

echo "Hosts file updated. localhost now resolves to 127.0.0.2, and facebook.com resolves to 8.8.8.8."
