#!/usr/bin/env bash

# Copy the original hosts file to a new file
cp /etc/hosts ~/hosts.new

# Use sed to replace the IP address for localhost
sudo sed -i 's/127.0.0.1/127.0.0.2/g' ~/hosts.new

# Add an entry to map facebook.com to 8.8.8.8
echo "8.8.8.8 facebook.com" >> ~/hosts.new

# Overwrite the original hosts file with the modified one
cp -f ~/hosts.new /etc/hosts
